<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/custom_tab_element"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/custom_tab_icon"
		android:layout_width="30dp"
		android:layout_height="30dp"
		android:layout_alignParentTop="true"
		android:src="@drawable/menu_my_data"
		android:layout_marginTop="@dimen/margin_ss"
		android:layout_centerHorizontal="true"/>

	<solutions.masai.masai.android.core.helper.AutoFitText
		android:id="@+id/custom_tab_text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/custom_tab_icon"
		android:textColor="@color/dirty_white"
		android:textSize="@dimen/tab_label"
		android:lines="1"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"/>

</RelativeLayout>